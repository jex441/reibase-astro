---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import "../styles/install.css";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reibase</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="/styles/install.css" />
  </head>

  <body>
    <span>
      <Header />
      
    <!-- Content -->
    <div class="installContent">
        <div class="leftSection">
           <a href="/">
            <img src="../logowhite.png" />
            </a>
            <h1>Book an alpha release demo</h1>
            <p>
                Building off of our TurboSrc protocol, Reibase provides and easy way for maintainers to create a governance model for their project.
            </p>
            <form class="installDemoForm" id="template_v1ulh7q">
                <input type="text" placeholder="Name" name="from_name">
                <input type="email" placeholder="Email Address" name="reply_to" />
                <button type="submit" class="installDemoFormButton">Submit</button>
                <div class="success">Thank you - we will be in touch shortly.</div>
              </form>
        </div>
        <div class="rightSection">
            <img src="../screenshot1.png" />
            <img src="../screenshot2.png" />
        </div>
    </div>
  </body>
</html>
