---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<style is:global>
:root {
    --primary: var(--violet);
    --violet: #3c18b3;
    --blue: #5200FF;
    --secondary: #6A6868;
    --lightgray: #D4D4D4;
    --dark: #1A181E;
    --green: #22c55e;
    --lightblue: #a2d9ff;
    --light: #f3f4f6;
    --lightbg: #f1f5f9;
}
	header {
		margin: 0;
		background: white;
	}
	.header img {
    	width: 200px;
 	}
	a > .gh-icon {
		width:24px;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	.bar {
     height: .618rem;
     width: 100%;
     display: block;
     background: var(--primary);
     background: linear-gradient(90deg, var(--primary) 20%, var(--secondary) 100%);
    }
	
	.nav {
     position: sticky;
     display: flex;
     flex-direction: row;
	 justify-content: space-between;
	 align-items: center;
     width: 100%;
     height: 5rem;
     font-size: 16px;

 }

 .nav span {
     margin: 1rem;
     display: flex;
     flex-direction: row;
     align-items: center;
	 justify-content: flex-end;
 }

 .nav a {
     font-size: 16px;
     text-decoration: none;
     color: black;
     overflow: hidden;
 }

 .nav a:hover {
     color: black);
 }

 .nav ul li {
    margin-bottom: .5rem;
    font-size: 18px;
}


	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.menu {
     display: flex;
     justify-content: flex-end;
     align-items: flex-end;	
	 list-style-type: none;

 }



 .menu li a {
     display: flex;
     align-items: flex-end;
     margin-right: 3rem;
     margin-top: auto;
 }

 .menu li:nth-child(4) {
     margin: 0rem 0rem 0rem 3rem;
 }
</style>
<header>
	<div class="bar"></div>

	<nav class="nav">
		<header class="header">
		  <a href="/"><img src="/logo.png" /></a>
		</header>
		<span>
		  <ul class="menu">
			  <li>
				<a href="https://github.com/turbo-src/turbo-src">Install</a>
			  </li>
			  <li>
				<a href="/learn/">Learn</a>
			  </li>
			  <li>
				<a href="/blog/">Blog</a>
			  </li>
			  <li>
				<a href="https://github.com/turbo-src" target="_blank">
				<img class="gh-icon" src="/github.png" />
			  </a>
			  </li>
		  </ul>
		</span>
	  </nav>
</header>

